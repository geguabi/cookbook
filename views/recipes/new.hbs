{{#extend "scripts"}}
<script src="/lib/bootstrap-validator/dist/validator.min.js"></script>
{{/extend}}
<a href="list" class="btn btn-default btn-sm">Vissza a listaoldalra</a>
<div class="page-header">
    <h1>Új recept felvitele</h1>
</div>

<form class="form-horizontal" method="post" data-toggle="validator">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.nev}}
                has-error
            {{/if}}
        ">
            <label for="nev" class="col-lg-2 control-label">Recept név</label>
            <div class="col-lg-10">
                <input required class="form-control" id="nev" name="nev" placeholder="pl. Csirke brassói" type="text" value="{{data.nev}}">
                {{#if validationErrors.nev}}
                    <span class="help-block">{{validationErrors.nev.msg}}</span>
                {{/if}}
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="form-group
            {{#if validationErrors.leiras}}
                has-error
            {{/if}}
        ">
            <label for="leiras" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea required class="form-control" rows="3" id="leiras" name="leiras">{{data.leiras}}</textarea>
                <span class="help-block">Meg kell adni a recept nevét és leírását is.</span>
                {{#if validationErrors.leiras}}
                    <span class="help-block">{{validationErrors.leiras.msg}}</span>
                {{/if}}
                <div class="help-block with-errors"></div>
            </div>
            
            <label for="pic" class="col-lg-2 control-label">Kép URL</label>
            <div class="col-lg-10">
                <input required class="form-control" id="pic" name="pic"  type="text" value="{{data.pic}}">
                
                
                <div class="help-block with-errors"></div>
            </div>
            
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
</form>              