{{#extend "scripts"}}
<script src="/js/list.js"></script>
{{/extend}}

{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Receptek</h1>
</div>

<table class="table table-striped table-hover " id="errorTable">
    <thead>
        <tr>
            <th></th>
            <th>Név</th>
            <th>Leírás</th>
            <th>Időpont</th>
            <th>Státusz</th>
            <th></th>
        </tr>   
    </thead>
    <tbody>
        {{#each errors}}
        <tr>
            <td><img src={{pic}} widht="60px" height="60px"></td>
            <td>{{name}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
            <td>{{date}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td><a href="/recipes/:{{id}}" class="btn btn-primary btn-sm">Hozzávalók felvitele</a>
            <a href="/delete:{{id}}" class="btn btn-danger btn-sm">Recept törlése</a>
            <a href="/update:{{id}}" class="btn btn-success btn-sm">Recept módosítása</a></td>
            
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/recipes/new" class="btn btn-default">Új recept felvitele</a></p>